<Window
    x:Class="RandomPickerUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RandomPickerUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:custom="clr-namespace:RandomPickerUI"
    Title="MainWindow"
    Width="600"
    Height="900"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Grid.ColumnSpan="2" Background="#FF2B5EE2">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="Segoe UI"
                FontSize="30"
                Foreground="White"
                Text="RANDOM PICKER" />
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label>Sets</Label>
            <custom:ScrollingListBox
                x:Name="setList"
                Grid.Row="1"
                Margin="10"
                VerticalAlignment="Stretch"
                DisplayMemberPath="Name"
                ItemsSource="{Binding Path=Sets}"
                SelectedItem="{Binding Path=CurrentSet}" />
            <TextBox
                x:Name="editSet"
                Grid.Row="2"
                Margin="10,5"
                Text="{Binding Path=CurrentSet.Name, UpdateSourceTrigger=PropertyChanged}" />
            <Grid Grid.Row="3" Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="addSet"
                    Margin="5"
                    Padding="5,0"
                    Click="addSet_Click"
                    Content="Add Set" />
                <Button
                    x:Name="deleteSet"
                    Grid.Column="1"
                    Margin="5"
                    Padding="5,0"
                    Click="deleteSet_Click"
                    Content="Delete Set" />
            </Grid>

        </Grid>
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label>Groups</Label>
            <custom:ScrollingListBox
                x:Name="Groups"
                Grid.Row="1"
                Margin="10"
                VerticalAlignment="Stretch"
                DisplayMemberPath="Name"
                ItemsSource="{Binding Path=CurrentSet.Groups}"
                SelectedItem="{Binding Path=CurrentGroup}" />
            <TextBox
                Grid.Row="2"
                Margin="10,5"
                Text="{Binding Path=CurrentGroup.Name, UpdateSourceTrigger=PropertyChanged}" />
            <Grid Grid.Row="3" Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="addGroup"
                    Margin="5"
                    Padding="5,0"
                    Click="addGroup_Click"
                    Content="Add Group" />
                <Button
                    x:Name="deleteGroup"
                    Grid.Column="1"
                    Margin="5"
                    Padding="5,0"
                    Click="deleteGroup_Click"
                    Content="Delete Group" />
            </Grid>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label>All Items</Label>
            <custom:ScrollingListBox
                x:Name="ListItems"
                Grid.Row="1"
                Margin="10"
                VerticalAlignment="Stretch"
                DisplayMemberPath="Name"
                ItemsSource="{Binding Path=CurrentSet.Items}"
                SelectedItem="{Binding Path=CurrentItem}" />
            <TextBox
                x:Name="editItem"
                Grid.Row="2"
                Margin="10,5"
                Text="{Binding Path=CurrentItem.Name, UpdateSourceTrigger=PropertyChanged}" />
            <Grid Grid.Row="3" Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="addItem"
                    Grid.Column="0"
                    Margin="5"
                    Padding="5,0"
                    Click="addItem_Click"
                    Content="Add Item" />
                <Button
                    x:Name="deleteItem"
                    Grid.Column="1"
                    Margin="5"
                    Padding="5,0"
                    Click="deleteItem_Click"
                    Content="Delete Item" />
                <Button
                    x:Name="addToGroup"
                    Grid.Column="2"
                    Margin="5"
                    Padding="5,0"
                    Click="addToGroup_Click"
                    Content="Add To Group" />
            </Grid>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label>Group Items</Label>
            <custom:ScrollingListBox
                x:Name="GroupItems"
                Grid.Row="1"
                Margin="10"
                VerticalAlignment="Stretch"
                DisplayMemberPath="Name"
                ItemsSource="{Binding Path=CurrentGroup.Items}"
                SelectedItem="{Binding Path=CurrentGroupItem}" />


            <Button
                x:Name="DeleteItemFromGroup"
                Grid.Row="2"
                Grid.Column="1"
                Margin="5"
                Padding="5,0"
                Click="DeleteItemFromGroup_Click"
                Content="Delete From Group" />

        </Grid>
        <Grid Grid.Row="3" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label>Result</Label>
            <custom:ScrollingListBox
                x:Name="ResultList"
                Grid.Row="1"
                Margin="10"
                VerticalAlignment="Stretch"
                ItemsSource="{Binding Path=ResultString}" />
            <Grid Grid.Row="2" Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="randomSet"
                    Margin="5"
                    Padding="5,0"
                    Click="randomSet_Click"
                    Content="Pick From Full Set" />
                <StackPanel
                    Grid.Column="1"
                    Margin="5"
                    Orientation="Horizontal">
                    <Label>Take</Label>
                    <TextBox
                        x:Name="timesFromSet"
                        Width="25"
                        VerticalAlignment="Center"
                        Text="{Binding Path=TimesFromSet}" />

                </StackPanel>
                <Button
                    x:Name="randomGroup"
                    Grid.Column="2"
                    Margin="5"
                    Padding="5,0"
                    Click="randomGroup_Click"
                    Content="Pick From Group" />
                <StackPanel
                    Grid.Column="3"
                    Margin="5"
                    Orientation="Horizontal">
                    <Label>Take</Label>
                    <TextBox
                        x:Name="timesFromGroup"
                        Width="25"
                        VerticalAlignment="Center"
                        Text="{Binding Path=TimesFromGroup}" />
                </StackPanel>
            </Grid>

        </Grid>

    </Grid>
</Window>
